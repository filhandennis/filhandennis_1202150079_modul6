<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.develop.filhan.filhandennis_1202150079_modul6.UploadActivity">

    <ImageView
        android:id="@+id/lblUploadImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_image_black_24dp" />

    <Button
        android:id="@+id/btnUploadChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Select Image"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtUploadTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Title" />


    <EditText
        android:id="@+id/txtUploadCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Write Something to Post ..."
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnUploadSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Upload"
        android:textColor="@android:color/white" />

</LinearLayout>
